
datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}
 

generator client {
  provider = "prisma-client-js"
}
 
// 3
model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String?
  role      String     @default("USER")
  cvs     Cv[]
}

model Cv {
  id        Int      @id @default(autoincrement())
  name     String   
  age       Int
  job      String
  user    User?    @relation(fields: [userId], references: [id])
  userId  Int?
  skills Skill[]
}


model Skill {
  id        Int      @id @default(autoincrement())
  designation     String   
  cvs Cv[]
}
